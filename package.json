{
  "name": "covalent",
  "description": "Confidential donation platform using Fully Homomorphic Encryption",
  "version": "0.1.0",
  "engines": {
    "node": ">=20",
    "npm": ">=7.0.0"
  },
  "license": "MIT",
  "homepage": "https://github.com/0xNana/covalent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xNana/covalent.git"
  },
  "keywords": [
    "fhevm",
    "zama",
    "confidential",
    "donation",
    "privacy",
    "encryption",
    "ethereum",
    "hardhat",
    "account-abstraction"
  ],
  "dependencies": {
    "@fhevm/mock-utils": "^0.4.0",
    "@fhevm/solidity": "0.9.1",
    "@openzeppelin/confidential-contracts": "^0.3.1",
    "encrypted-types": "^0.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-verify": "^3.0.10",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.30",
    "@zama-fhe/relayer-sdk": "^0.4.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "ethers": "^6.16.0",
    "globals": "^17.3.0",
    "hardhat": "^2.28.4",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^11.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-solidity": "^2.2.1",
    "rimraf": "^6.1.2",
    "solhint": "^6.0.3",
    "solidity-coverage": "^0.7.22",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "scripts": {
    "compile": "npm run compile --prefix contracts",
    "test": "npm test --prefix contracts",
    "deploy": "npm run deploy --prefix contracts",
    "deploy:localhost": "cd contracts && npx hardhat deploy --network localhost --tags CovalentFund",
    "deploy:sepolia": "cd contracts && npx hardhat deploy --network sepolia --tags CovalentFund",
    "chain": "cd contracts && npx hardhat node --network hardhat --no-deploy",
    "lint": "npm run lint --prefix contracts",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "frontend:dev": "npm run dev --prefix frontend",
    "frontend:build": "npm run build --prefix frontend",
    "script:generate-address": "cd contracts && npx hardhat run ../scripts/generate-address.ts",
    "script:claim-faucet": "cd contracts && npx hardhat run ../scripts/claim-faucet.ts",
    "script:create-fund": "cd contracts && npx hardhat run ../scripts/create-fund.ts",
    "script:donate": "cd contracts && npx hardhat run ../scripts/donate.ts",
    "script:erc7984wrapper": "cd contracts && npx hardhat run ../scripts/erc7984wrapper.ts"
  },
  "overrides": {
    "ws@>=7.0.0 <7.5.10": ">=7.5.10",
    "axios@>=1.3.2 <=1.7.3": ">=1.7.4",
    "elliptic@>=4.0.0 <=6.5.6": ">=6.5.7",
    "elliptic@>=2.0.0 <=6.5.6": ">=6.5.7",
    "elliptic@>=5.2.1 <=6.5.6": ">=6.5.7",
    "micromatch@<4.0.8": ">=4.0.8",
    "elliptic@<6.6.0": ">=6.6.0",
    "elliptic@<6.5.6": ">=6.5.6",
    "undici@>=6.0.0 <6.21.1": ">=6.21.1 <7.0.0",
    "undici@>=4.5.0 <5.28.5": ">=5.28.5 <6.0.0",
    "elliptic@<=6.6.0": ">=6.6.1",
    "tar-fs@>=2.0.0 <2.1.2": ">=2.1.2",
    "axios@>=1.0.0 <1.8.2": ">=1.8.2",
    "axios@<0.29.1": ">=0.29.1",
    "cookie@<0.7.0": ">=0.7.0",
    "minimatch": "^3.1.2",
    "@openzeppelin/confidential-contracts": {
      "@fhevm/solidity": "0.9.1"
    }
  }
}
